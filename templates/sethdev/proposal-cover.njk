<section class="proposal-cover">
    <div class="proposal-cover-header">
        <div class="title-page-accent"></div>
        <p class="proposal-cover-label">Offerte</p>
        <h1 class="p-page-title">{{ title }}</h1>
        <p class="title-page-subtitle">{{ klant }}</p>
    </div>
    <div class="proposal-cover-footer">
        <div class="proposal-cover-section">
            <table class="proposal-cover-table">
                <tr>
                    <td class="proposal-cover-field">Datum</td>
                    <td>{{ offertedatum }}</td>
                </tr>
                <tr>
                    <td class="proposal-cover-field">Geldig tot</td>
                    <td>{{ vervaldatum }}</td>
                </tr>
                <tr>
                    <td class="proposal-cover-field">Nummer</td>
                    <td>{{ offertenummer }}</td>
                </tr>
                {% if offertecode is defined %}
                    <tr>
                        <td class="proposal-cover-field">Code</td>
                        <td>{{ offertecode }}</td>
                    </tr>
                {% endif %}
                {% if kenmerk is defined %}
                    <tr>
                        <td class="proposal-cover-field">Kenmerk</td>
                        <td>{{ kenmerk }}</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
    <div class="proposal-cover-columns">
        {% if klant is defined or klantadres is defined or klantemail is defined %}
            <div class="proposal-cover-section">
                <h4 class="proposal-cover-section-title">Aan</h4>
                {% if klant is defined %}
                    <p class="proposal-cover-company">{{ klant }}</p>
                {% endif %}
                {% if klantcontact is defined %}
                    <p>t.a.v. {{ klantcontact }}</p>
                {% endif %}
                {% if klantadres is defined %}
                    <p>{{ klantadres }}</p>
                {% endif %}
                {% if klantpostcode is defined or klantplaats is defined %}
                    <p>{{ klantpostcode | default("") }}
                        {% if klantpostcode and klantplaats %}{% endif %}
                        {{ klantplaats | default("") }}</p>
                {% endif %}
                {% if klanttelefoon is defined %}
                    <p>{{ klanttelefoon }}</p>
                {% endif %}
                {% if klantemail is defined %}
                    <p>
                        <a href="mailto:{{ klantemail }}">{{ klantemail }}</a>
                    </p>
                {% endif %}
                {% if klantkvk is defined %}
                    <div class="proposal-cover-legal">
                        <p>
                            <span class="proposal-cover-field">KVK</span>
                            {{ klantkvk }}</p>
                    </div>
                {% endif %}
            </div>
        {% endif %}
        {% if bedrijf is defined or adres is defined or telefoon is defined or email is defined %}
            <div class="proposal-cover-section">
                <h4 class="proposal-cover-section-title">Afzender</h4>
                {% if bedrijf is defined %}
                    <p class="proposal-cover-company">{{ bedrijf }}</p>
                {% endif %}
                {% if adres is defined %}
                    <p>{{ adres }}</p>
                {% endif %}
                {% if postcode is defined or plaats is defined %}
                    <p>{{ postcode | default("") }}
                        {% if postcode and plaats %}{% endif %}
                        {{ plaats | default("") }}</p>
                {% endif %}
                {% if telefoon is defined %}
                    <p>{{ telefoon }}</p>
                {% endif %}
                {% if email is defined %}
                    <p>
                        <a href="mailto:{{ email }}">{{ email }}</a>
                    </p>
                {% endif %}
                {% if website is defined %}
                    <p>
                        <a href="https://{{ website }}">{{ website }}</a>
                    </p>
                {% endif %}
                {% if kvknummer is defined or btwnummer is defined or iban is defined %}
                    <div class="proposal-cover-legal">
                        {% if kvknummer is defined %}
                            <p>
                                <span class="proposal-cover-field">KVK</span>
                                {{ kvknummer }}</p>
                        {% endif %}
                        {% if btwnummer is defined %}
                            <p>
                                <span class="proposal-cover-field">BTW</span>
                                {{ btwnummer }}</p>
                        {% endif %}
                        {% if iban is defined %}
                            <p>
                                <span class="proposal-cover-field">IBAN</span>
                                {{ iban }}</p>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>